<% content_for(:title, t('.title')) %>
<div class="flex flex-col items-center text-orange">
  <div class="text-4xl m-6">
    <h1>投稿一覧</h1>
  </div>
  <div class="">
    <%= render 'shared/search', q: @q, url: posts_path, search_target: @search_target %>
  </div>
  <div class="w-full mt-10">
    <% if @posts.present? %>
      <div class="">
        <%= render partial: 'posts/post', locals: { posts: @posts } %>
      </div>
    <% else %>
      <div class="text-center py-4">
        投稿はありません
      </div>
    <% end %>
  </div>
</div>

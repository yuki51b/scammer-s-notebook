<div class="flex flex-col items-center text-slate-950">
  <div class="card bg-gray-50 shadow-xl my-10 mx-4 w-4/5">
    <div class="card-body">
      <p class="flex justify-center text-orange text-xl font-mono md:text-2xl">プロフィール編集</p>
        <%= form_with model: @user, url: profile_path, data: { turbo: false } do |f| %>
        <div class="flex flex-col m-2">
          <%= f.label :name, class: "input input-bordered flex items-center gap-2" do %>
						<i class="fa-solid fa-user-secret"></i>
            <%= f.text_field :name, class: "grow"%>
          <% end %>
        </div>
        <div class="flex flex-col mt-4">
          <%= f.submit "編集する", class: "btn btn-warning rounded-full" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

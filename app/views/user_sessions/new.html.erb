<div class="flex flex-col items-center text-slate-950">
	<div class="card bg-gray-50 shadow-xl my-10 mx-4 w-4/5">
    <div class="card-body">
      <p class="flex justify-center text-orange text-xl">ログインしてくれよな!</p>
    <%= form_with(url: login_path, data: { turbo: false }) do |f| %>
        <div class="flex flex-col m-2">
            <%= f.label :email, class: "input input-bordered flex items-center gap-2" do %>
							<i class="fa-solid fa-envelope"></i>
							<%= f.email_field :email,  class: "text-slate-950", placeholder: "メールアドレス" %>
						<% end %>
        </div>
        <div class="flex flex-col m-2">
            <%= f.label :password, class: "input input-bordered flex items-center gap-2" do %>
							<i class="fa-solid fa-key"></i>
							<%= f.password_field :password,  class: "text-slate-950", placeholder: "パスワード" %>
						<% end %>
        </div>
        <div class="flex flex-col m-2">
            <%= f.submit "ログイン", class: "btn rounded-full btn-warning" %>
        </div>
    <% end %>
    </div>
  </div>
        <div class="flex flex-col">
            <%= link_to "ユーザー登録", new_user_path, class: "btn rounded-full btn-success" %>
						<div class="divider">OR</div>
            <%= link_to 'パスワードをお忘れの方はこちら', '#', class: "underline text-orange" %>
        </div>
</div>


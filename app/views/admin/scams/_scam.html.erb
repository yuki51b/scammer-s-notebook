<div class="card bg-gray-50 shadow-xl m-4">
  <div class="card-body">
    <div class="overflow-x-auto m-10">
      <table class="table">
        <!-- head -->
        <thead>
          <tr>
            <th>詐欺名</th>
            <th>詐欺詳細</th>
            <th>編集</th>
            <th>削除</th>
          </tr>
        </thead>
        <tbody>
          <% @scams.each do |scam| %>
            <tr class="text-xl hover:bg-slate-300 text-slate-950 border-dashed">
              <td><%= scam.name %></td>
              <td>
                <%= link_to admin_scam_path(scam) do %>
                <i class="fa-solid fa-book-open fa-xl pl-4"></i>
                <% end %>
              </td>
              <td>
                <%= link_to edit_admin_scam_path(scam) do %>
                <i class="fa-solid fa-marker"></i>
                <% end %>
              </td>
              <td>
                <%= link_to "#" do %>
                <i class="fa-regular fa-trash-can"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


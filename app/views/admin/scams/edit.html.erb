<%= form_with model: @scam, url: admin_scam_path(@scam), local: true, data: { turbo: false } do |f| %>
  <div class="flex flex-col m-2">
    <%= f.label :name %>
    <%= f.text_field :name,  class: "text-slate-950 input input-bordered" %>
  </div>
  <div class="flex flex-col m-2">
    <%= f.label :content %>
    <%= f.text_field :content,  class: "text-slate-950 input input-bordered" %>
  </div>
  <div class="flex flex-col m-2">
    <%= f.label :point_1 %>
    <%= f.text_field :point_1,  class: "text-slate-950 input input-bordered" %>
  </div>
  <div class="flex flex-col m-2">
    <%= f.label :point_2 %>
    <%= f.text_field :point_2,  class: "text-slate-950 input input-bordered" %>
  </div>
  <div class="flex flex-col m-2">
    <%= f.label :point_3 %>
    <%= f.text_field :point_3,  class: "text-slate-950 input input-bordered" %>
  </div>
  <div class="flex flex-col m-2">
    <%= f.label :scam_strategy %>
    <%= f.text_area :scam_strategy,  class: "text-slate-950 input input-bordered h-64" %>
  </div>

    <%= f.submit "編集する", class: "justify-items-center btn btn-warning w-64 rounded-full"%>
<% end %>

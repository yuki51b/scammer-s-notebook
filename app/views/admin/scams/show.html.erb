<div class="card bg-gray-50 shadow-xl m-4">
  <div class="card-body">
    <div class="flex flex-col text-center">
      <P class="pb-2 text-orange">詐欺名</p>
        <div class="mb-8 border-dashed border-b">
          <%= @scam.name %>
        </div>
      <P class="pb-2 text-orange">詐欺について一言で説明</p>
        <div class="mb-8 border-dashed border-b">
          <%= @scam.content %>
        </div>
      <P class="pb-2 text-orange">確認するポイント1</p>
        <div class="mb-8 border-dashed border-b">
          <%= @scam.point_1 %>
        </div>
      <P class="pb-2 text-orange">確認するポイント2</p>
        <div class="mb-8 border-dashed border-b">
          <%= @scam.point_2 %>
        </div>
      <P class="pb-2 text-orange">確認するポイント3</p>
        <div class="mb-8 border-dashed border-b">
          <%= @scam.point_3 %>
        </div>
      <p class="pb-2 text-orange">詐欺の詳細(詐欺師視点)</p>
        <div class="mb-8">
          <% @scam_strategy.each do |line| %>
            <div class="border-b py-2">
              <%= line %>
            </div>
          <% end %>
        </div>
    </div>
        <div class="flex flex-row justify-between mt-10">
				<%= link_to "戻る", admin_root_path, class: "btn  btn-success w-32 rounded-full" %>
				<div class="divider divider-horizontal">OR</div>
				<%= link_to "編集する", edit_admin_scam_path(@scam), class: "btn btn-warning w-32 rounded-full" %>
			</div>
  </div>
</div>
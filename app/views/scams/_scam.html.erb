<div class="card bg-blue-100 shadow-xl m-4">
  <div class="card-body">
    <div class="overflow-x-auto">
      <table class="table">
        <!-- head -->
        <thead>
          <tr>
            <th class="text-sm md:text-base">詐欺名</th>
            <th class="text-sm md:text-base">詐欺詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @scams.each do |scam| %>
            <tr class="text-base md:text-xl hover:bg-slate-300 text-slate-950 border-dashed">
              <td><%= scam.name %></td>
              <td>
                <%= link_to scam_path(scam) do %>
                <i class="fa-solid fa-book-open fa-xl pl-4 text-yellow-900"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


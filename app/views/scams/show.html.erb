<% content_for(:title, t('.title')) %>
<div class="flex flex-col text-orange">
		<div class="flex justify-center text-2xl md:text-4xl mt-8 mx-4 text-orange bg-amber-200 rounded-full">
        <%=@scam.name %>
    </div>
	<div class="card bg-gray-50 shadow-xl m-4">
		<div class="card-body bg-slate-100">
			<div class="text-slate-950 text-xl leading-normal">
				<% @scam_strategy.each do |line| %>
					<div class="py-2">
						<%= line %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
	<div class="flex flex-row justify-between mt-10 mx-4">
			<%= link_to "詐欺の一覧", scams_path, class: "btn btn-success w-32 md:w-64 md:mx-10 rounded-full" %>
				<div class="divider divider-horizontal md:text-xl">OR</div>
			<%= link_to "投稿を見にいく", posts_path, class: "btn btn-warning w-32 md:w-64 md:mx-10 rounded-full" %>
	</div>
</div>
